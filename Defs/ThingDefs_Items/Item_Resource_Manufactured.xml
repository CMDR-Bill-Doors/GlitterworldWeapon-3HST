<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>RailComponent</defName>
    <label>electromagnetic accelerator rail</label>
    <description>Advanced magnetic accelerator rails used in various 3HST railgun designs</description>
    <graphicData>
      <texPath>Things/Item/Resource/RailComponent</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>50</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>30</MaxHitPoints>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>3.0</DeteriorationRate>
    </statBases>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>Job_RailRearm</useJob>
        <useLabel>Rearm rail</useLabel>
        <useDuration>120</useDuration>
      </li>
      <li Class="BDsGlitterworldFaction3HST.CompProperties_Barrel">
        <loadSound>Interact_ChargeRifle</loadSound>
      </li>
    </comps>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
      <li>BDGunComponents</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
    </thingSetMakerTags>
  </ThingDef>

  <RecipeDef>
    <defName>Make_RailComponent</defName>
    <label>make electromagnetic accelerator rail</label>
    <description>Make electromagnetic accelerator rail.</description>
    <jobString>Making electromagnetic accelerator rail.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>15000</workAmount>
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentSpacer</li>
        <li>Steel</li>
        <li>Silver</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RailComponent>3</RailComponent>
    </products>
    <researchPrerequisite>Research_3HST_Railgun_Components</researchPrerequisite>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

