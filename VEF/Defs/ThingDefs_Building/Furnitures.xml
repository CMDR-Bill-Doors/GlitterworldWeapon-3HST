<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="StandingLampBase" >
		<defName>StandingLamp3HST</defName>
		<label>standing lamp</label>
		<graphicData>
			<texPath>Things/Building/Furniture/3HST_LampStanding</texPath>
		</graphicData>
		<description>An electrical standing lamp that lights an area. People need light to move and work at full speed.</description>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>12</glowRadius>
				<glowColor>(217,217,208,0)</glowColor>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>Column3HST</defName>
		<label>column</label>
		<description>A column capable of holding a roof. Does not block sight or movement and looks quite nice.</description>
		<designationCategory>Structure</designationCategory>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.25</fillPercent>
		<pathCost>0</pathCost>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToBuild>750</WorkToBuild>
			<Mass>10</Mass>
			<Flammability>1.0</Flammability>
		</statBases>
		<holdsRoof>true</holdsRoof>
		<canOverlapZones>false</canOverlapZones>
		<rotatable>false</rotatable>
		<fertility>0</fertility>
		<specialDisplayRadius>6.9</specialDisplayRadius>
		<costList>
			<Steel>50</Steel>
		</costList>
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
		</building>
		<graphicData>
			<drawSize>(1,1.25)</drawSize>
			<drawOffset>(0,0,0.2)</drawOffset>
			<texPath>Things/Building/Furniture/3HST_Column</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.3, 0.5, 0.3)</volume>
				<offset>(0,0,-0.23)</offset>
			</shadowData>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
	</ThingDef>
</Defs>