	<ThingDef ParentName="Base3HSTADSGun" Name="BaseADSLGIS">
		<defName>Gun_SinglelLGIS_ADS</defName>
		<label>single LGIS missile launcher</label>
		<description>A rocket launcher capable of holding and firing a LGIS missile.</description>
		<graphicData>
			<texPath>Things/Building/Turrets/SLGIS_Turret</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<weaponTags>
			<li>Artillery_BaseDestroyer</li>
			<li>CE_AI_AOE</li>
			<li>3HST_ADS_LGIS</li>
		</weaponTags>
		<soundInteract>Artillery_ShellLoaded</soundInteract>
		<statBases>
			<SightsEfficiency>2</SightsEfficiency>
			<ShotSpread>0.2</ShotSpread>
			<SwayFactor>1.68</SwayFactor>
			<RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
			<MarketValue>2400</MarketValue>
		</statBases>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<verbClass>ThreeHST.Verb_ShootCEAutoSwitchMode</verbClass>
				<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Projectile_70mmLGIS_Frag</defaultProjectile>
				<warmupTime>2.5</warmupTime>
				<minRange>15</minRange>
				<range>200</range>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>InfernoCannon_Fire</soundCast>
				<muzzleFlashScale>16</muzzleFlashScale>
				<circularError>2</circularError>
				<indirectFirePenalty>0.2</indirectFirePenalty>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<requireLineOfSight>false</requireLineOfSight>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>1</magazineSize>
				<reloadTime>6.6</reloadTime>
				<ammoSet>AmmoSet_70mmLGIS</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiAimMode>AimedShot</aiAimMode>
			</li>
			<li Class="ThreeHST.CompProperties_SecondaryAmmo">
				<secondaryVerb>
					<verbClass>ThreeHST.Verb_ShootCEAutoSwitchMode</verbClass>
					<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Projectile_70mmLGIS_Frag_Indirect</defaultProjectile>
					<warmupTime>6.5</warmupTime>
					<minRange>15</minRange>
					<range>200</range>
					<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
					<soundCast>InfernoCannon_Fire</soundCast>
					<muzzleFlashScale>16</muzzleFlashScale>
					<circularError>2</circularError>
					<indirectFirePenalty>0.2</indirectFirePenalty>
					<targetParams>
						<canTargetLocations>true</canTargetLocations>
					</targetParams>
					<requireLineOfSight>false</requireLineOfSight>
				</secondaryVerb>
				<secondaryAmmoProps>
					<magazineSize>1</magazineSize>
					<reloadTime>6.6</reloadTime>
					<ammoSet>AmmoSet_70mmLGIS_Indirect</ammoSet>
				</secondaryAmmoProps>
				<mainWeaponLabel>direct fire</mainWeaponLabel>
				<secondaryWeaponLabel>indirect fire</secondaryWeaponLabel>
				<description>switch firing mode</description>
				<mainCommandIcon>UI/Icons/FireModes/Direct</mainCommandIcon>
				<secondaryCommandIcon>UI/Icons/FireModes/Indirect</secondaryCommandIcon>
				<secondaryWeaponChargeSpeeds>
					<li>30</li>
					<li>50</li>
					<li>70</li>
					<li>90</li>
				</secondaryWeaponChargeSpeeds>
			</li>
		</comps>
	</ThingDef>

