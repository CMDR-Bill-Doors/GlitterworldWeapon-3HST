<Defs>
  <ThingDef ParentName="BaseMechanoid">
    <defName>Mech_AutoFirePlatform</defName>
    <label>3HST automatic fire platform</label>
    <description>An armored automated vehicle with rudimentary IFF system and a turret mount.</description>
    <statBases>
      <MoveSpeed>1.9</MoveSpeed>
      <ArmorRating_Blunt>15</ArmorRating_Blunt>
      <ArmorRating_Sharp>15</ArmorRating_Sharp>
      <PsychicSensitivity>0</PsychicSensitivity>
      <CarryWeight>400</CarryWeight>
      <CarryBulk>80</CarryBulk>
      <AimingAccuracy>0.9</AimingAccuracy>
      <ShootingAccuracyPawn>1</ShootingAccuracyPawn>
      <MeleeDodgeChance>0</MeleeDodgeChance>
      <MeleeCritChance>0</MeleeCritChance>
      <MeleeParryChance>0</MeleeParryChance>
      <AimingDelayFactor>1.2</AimingDelayFactor>
      <MaxHitPoints>500</MaxHitPoints>
    </statBases>
    <comps>
      <li Class="PLA.CompProperties_VehicleWeapon">
      </li>
    </comps>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>chassis</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>3.51</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <armorPenetrationSharp>0</armorPenetrationSharp>
        <armorPenetrationBlunt>15</armorPenetrationBlunt>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
    </tools>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>ADS_TurretCart</body>
      <baseBodySize>2</baseBodySize>
      <baseHealthScale>2.5</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
          <soundCall>Pawn_Mech_Centipede_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <Steel>30</Steel>
      <Plasteel>10</Plasteel>
    </butcherProducts>
    <modExtensions>
      <li Class="CombatExtended.RacePropertiesExtensionCE">
        <bodyShape>QuadrupedLow</bodyShape>
      </li>
    </modExtensions>
  </ThingDef>

